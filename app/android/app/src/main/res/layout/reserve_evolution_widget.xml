<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Cabeçalho -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Evolução da Reserva"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:contentDescription="Atualizar"
            android:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Valor Atual da Reserva -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:background="@drawable/current_value_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserva Atual"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/current_reserve_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 0,00"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="4dp" />
    </LinearLayout>

    <!-- Gráfico de Linha (últimos 6 meses) -->
    <LinearLayout
        android:id="@+id/line_chart_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <!-- Pontos do gráfico -->
        <RelativeLayout
            android:id="@+id/chart_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Canvas para desenhar a linha será implementado no provider -->
            <View
                android:id="@+id/line_chart_canvas"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Pontos dos meses -->
            <LinearLayout
                android:id="@+id/chart_points"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom">

                <!-- Os pontos serão adicionados dinamicamente -->
            </LinearLayout>
        </RelativeLayout>

        <!-- Labels dos meses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/month_label_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/month_label_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fev"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/month_label_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mar"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/month_label_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abr"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/month_label_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mai"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/month_label_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jun"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Resumo estatístico -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crescimento"
                android:textColor="#B0B0B0"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/growth_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0%"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="2dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#404040" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Média Mensal"
                android:textColor="#B0B0B0"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/monthly_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Última atualização -->
    <TextView
        android:id="@+id/last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizado em: --"
        android:textColor="#808080"
        android:textSize="10sp"
        android:gravity="center"
        android:paddingTop="8dp" />

</LinearLayout>
